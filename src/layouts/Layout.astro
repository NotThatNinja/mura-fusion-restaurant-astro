---
const { title } = Astro.props;

import '@fontsource-variable/montserrat';
---

<!doctype html>
<html lang="it">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="description"
            content="Sito ufficiale del ristorante Mura Fusion Restaurant. Qui troverete la nostra storia, il menÃ¹ aggiornato , i contatti e tanto altro."
        />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body>
        <slot />
    </body>
</html>
<style is:global>
    :root {
        --accent: #8f7600;
        --black: #000000;
        --white: #ffffff;
        
        --header-height: 5.29rem;
    }
    
    body {
        margin: 0;
        padding: 0;
        font-family: 'Montserrat Variable';
    }
    main {
        display: flex;
        flex-direction: column;
    }
    section {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        padding: 1.5rem;
        text-align: center;
    }
    main section:first-of-type {
        margin-top: var(--header-height);
    }

    img {
        max-width: 100%;
        height: auto;
    }

    p, a, h1, h2 {
        margin: 0;
        font-family: 'Montserrat Variable';
    }
    h2 {
        color: var(--white);
        font-size: 1.5rem;
    }
</style>

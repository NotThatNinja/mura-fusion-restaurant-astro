---
const { text, url } = Astro.props;
---

<div>
    <p>{text}</p>
    <a href={url}>Clicca qui</a>
</div>

<style>
    div {
        display: flex;
        justify-content: space-between;
        align-items: center;
        height: 4.5rem;
        padding: 0 0.5rem;
        background: var(--accent);
        box-shadow: 17px 12px 12.2px 0px rgba(0, 0, 0, 0.25);
    }
    p {
        color: var(--white);
        font-weight: bold;
    }
    a {
        padding: 0.3rem;
        background: var(--white);
        border-radius: 1rem;
        color: var(--black);
        text-decoration: none;
    }

    @media screen and (min-width: 1000px) {
        div {
            height: 6rem;
            padding: 0 1rem;
        }
    }
</style>

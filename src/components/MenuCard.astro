---
const { text, url } = Astro.props;
---

<div data-aos="flip-up">
    <p>{text}</p>
    <a href={url}>Visualizza</a>
</div>

<style>
    div {
        display: flex;
        justify-content: space-between;
        align-items: center;
        height: 4.5rem;
        padding: 0 0.5rem;
        background: var(--accent);
        box-shadow: 1rem 0.5rem 1rem 0 rgba(0, 0, 0, 0.25);
    }
    p {
        color: var(--white);
        font-weight: bold;
    }
    a {
        padding: 0.3rem 0.75rem;
        background: var(--white);
        border-radius: 1rem;
        color: var(--black);
        text-decoration: none;
        transition: background 0.2s, color 0.2s;
    }
    a:hover {
        background: var(--black);
        color: var(--white);
    }

    @media screen and (min-width: 1000px) {
        div {
            height: 6rem;
            padding: 0 1rem;
        }
    }
</style>

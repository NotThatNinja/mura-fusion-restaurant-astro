---
const { title, subtitle } = Astro.props;
---

<section>
    <h2>{title}</h2>
    <h3>{subtitle}</h3>
</section>

<style>
    section {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        background: white;
    }
    
    h3 {
        font-weight: 400;
    }

    @media screen and (min-width: 1000px) {
        section {
            gap: 1rem;
        }

        h3 {
            font-size: 1.5rem;
        }
    }
</style>

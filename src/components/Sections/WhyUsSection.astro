---
const { title, img } = Astro.props;
---

<section>
    <div>
        <h2>{title}</h2>

        <ul>
            <slot />
        </ul>
    </div>
</section>

<style define:vars={{ img: `url('${img}')` }}>
    section {
        padding: 1rem;
        background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), var(--img);
        background-position: 50% 50%;
    }

    div {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        padding: 1rem;
        background: rgba(255, 255, 255, 0.78);
    }
    h2 {
        color: var(--black);
    }
    ul {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        list-style: none;
        margin: 0;
        padding: 0;
        text-align: left;
    }

    @media screen and (min-width: 1000px) {
        section {
            padding: 5rem;
        }
        div {
            padding: 2rem;
        }
    }
</style>

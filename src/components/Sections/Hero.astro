---
import { Image } from "astro:assets";
import heroImage from "../../assets/hero.jpg";
---

<section>
    <Image src={heroImage} alt="Mura Fusion Restauransfsnijeijnt" />

    <div>
        <h1>MURA FUSION RESTAURANT</h1>
        <h2>CUCINA CINESE E GIAPPONESE</h2>
        <a href="#">GUARDA I MENÃ™</a>
    </div>
</section>

<style>
    img {
        position: absolute;
        max-width: none;
        width: 100%;
        height: calc(100% - var(--header-height));
        top: var(--header-height);
        left: 0;
        object-fit: cover;
        object-position: 0% 0%;
        filter: brightness(35%);
    }

    div {
        display: flex;
        flex-direction: column;
        position: absolute;
        top: 35%;
        gap: 1rem;
        position: absolute;
        text-align: left;
    }
    h1 {
        max-width: calc(100% - 3rem);
        color: var(--white);
    }
    h2 {
        font-weight: 400;
        color: var(--white);
    }
    a {
        width: fit-content;
        padding: 1rem;
        color: var(--black);
        background: var(--white);
        text-decoration: none;
    }

    @media screen and (min-width: 1000px) {
        div {
            gap: 2rem;
        }
        h1 {
            max-width: none;
            font-size: 5.8rem;
        }
        h2 {
            font-size: 3.5rem;
        }
        a {
            padding: 1rem 3rem;
            font-size: 2.125rem;
        }
    }
</style>

---
import { Image } from "astro:assets";
import heroImage from "../../assets/hero.png";
---

<section>
    <Image loading="eager" src={heroImage} alt="Mura Fusion Restaurant" />

    <div>
        <h1>MURA FUSION RESTAURANT</h1>
        <h2>Cucina cinese e giapponese</h2>
        <a href="#menu">Guarda i men√π</a>
    </div>
</section>

<style>
    section {
        margin-bottom: calc(100vh - 3rem - var(--header-height));
    }
    img {
        position: absolute;
        max-width: none;
        width: 100%;
        height: calc(100% - var(--header-height));
        top: var(--header-height);
        left: 0;
        object-fit: cover;
        object-position: 50% 0%;
        filter: brightness(75%);
    }

    div {
        display: flex;
        flex-direction: column;
        align-items: center;
        position: absolute;
        width: calc(100% - 2rem);
        top: 35%;
        left: 0;
        gap: 1rem;
        padding: 0 1rem;
        position: absolute;
        text-align: center;
    }
    h1 {
        max-width: calc(100% - 3rem);
        color: #C3A202;
        font-size: 2.5rem;
    }
    h2 {
        font-size: 1.75rem;
        font-weight: 400;
        color: var(--white);
    }
    a {
        width: fit-content;
        padding: 1rem;
        color: var(--black);
        border: 2px solid var(--white);
        background: var(--white);
        text-decoration: none;
        transition: background 0.4s, color 0.4s;
    }
    a:hover {
        background: transparent;
        color: var(--white);
    }

    @media screen and (min-width: 1000px) {
        section {
            margin-bottom: calc(100vh - 10rem - var(--header-height));
        }

        div {
            text-align: left;
            gap: 2rem;
            align-items: start;
            top: 40%;
            left: 6rem;
            max-width: calc(100% - 8rem);
        }
        h1 {
            font-size: 5rem;
        }
        h2 {
            font-size: 2.75rem;
        }
        a {
            padding: 1rem 1.5rem;
            font-size: 1.5rem;
        }
    }
</style>

---
const {title, price, description} = Astro.props;
---

<div data-aos="flip-up">
    <h3>{title}</h3>
    <p class="price">{price}</p>
    <p>{description}</p>
</div>

<style>
    div {
        display: flex;
        gap: 1rem;
        flex-direction: column;
        padding: 1rem;
        background: var(--accent);
        box-shadow: 1rem 0.5rem 1rem 0 rgba(0, 0, 0, 0.25);
    }
    h3 {
        margin: 0;
        color: var(--white);
        font-weight: bold;
    }
    p {
        color: var(--white);
    }
    .price {
        font-size: 2rem;
        font-weight: bold;
    }

    @media screen and (min-width: 1000px) {
        div {
            padding: 2rem;
        }
        .price {
            font-size: 3rem;
        }
    }
</style>

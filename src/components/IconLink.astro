---
const { url, text, icon } = Astro.props;
---

<div>
    <i class={icon} />
    <a href={url}>{text}</a>
</div>

<style>
    div {
        display: flex;
        gap: 2rem;
        align-items: center;
    }
    i {
        font-size: 2rem;
    }
    a {
        text-decoration: none;
        color: var(--accent);
        font-weight: bold;
    }

    @media screen and (min-width: 1000px) {
        i {
            font-size: 3rem;
        }
    }
</style>

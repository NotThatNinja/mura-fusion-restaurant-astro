---
import HeroCard from "./HeroCard.astro";

import { Image } from "astro:assets";
import sushi1Image from "../assets/sushi-1.webp";
import sushi2Image from "../assets/sushi-2.webp";
---

<section>
    <Image class="sushi-image-1" src={sushi1Image} alt="Sushi" />
    <Image class="sushi-image-2" src={sushi2Image} alt="Sushi" />

    <h1>
        <span>A</span>LL<br />
        <span>Y</span>OU<br />
        <span>C</span>AN<br />
        <span>E</span>AT
    </h1>

    <div class="cards">
        <HeroCard>
            PRANZO 14,90€<br />
            MARTEDÌ AL VENERDÌ A PERSONA
        </HeroCard>
        <HeroCard>
            PRANZO 20,90€<br />
            SABATO, DOMENICA E FESTIVI
        </HeroCard>
        <HeroCard>
            CENA 28,00€<br />
            MARTEDÌ AL VENERDÌ A PERSONA
        </HeroCard>
    </div>
</section>

<style>
    .sushi-image-1 {
        position: absolute;
        width: 15.75rem;
        top: 6rem;
        left: -2.5rem;
    }
    .sushi-image-2 {
        position: absolute;
        width: 15.75rem;
        bottom: 3rem;
        right: 0;
    }

    section {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        justify-content: space-around;
        align-items: center;
        position: absolute;
        width: 100vw;
        height: calc(100vh - var(--header-height));
        top: var(--header-height);
        background: linear-gradient(to right bottom, var(--accent) 50%, var(--black) 50%);
    }

    h1 {
        line-height: 1.3;
        font-size: 5rem;
        color: var(--white);
    }
    span {
        color: var(--black);
    }

    .cards {
        z-index: 1;
        display: flex;
        flex-direction: column;
        gap: 1rem;
        width: calc(100% - 4rem);
    }
</style>

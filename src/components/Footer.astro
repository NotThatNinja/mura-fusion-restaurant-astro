---
import { Image } from "astro:assets";
import logoImage from "../assets/logo.png";
---

<footer>
    <div>
        <Image class="logo" src={logoImage} alt="Mura Fusion Restaurant" />
    </div>

    <p>
        Tutti i diritti sono riservati<br />
        p. iva 1234567890
    </p>
</footer>

<style>
    footer {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        align-items: center;
        background: var(--accent);
    }

    div {
        display: flex;
        width: calc(100vw - 2.6rem);
        justify-content: center;
        padding: 0.75rem;
        background: var(--black);
    }
    img {
        max-width: 7.5rem;
    }

    p {
        padding: 0.5rem;
        color: var(--white);
        font-weight: 400;
        text-align: center;
    }

    @media screen and (min-width: 1000px) {
        p {
            padding: 1rem;
            font-size: 1.5rem;
        }
    }
</style>

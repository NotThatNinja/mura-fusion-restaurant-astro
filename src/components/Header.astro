---
import { Image } from "astro:assets";
import logoImage from "../assets/logo.png";

const currentUrl = Astro.url.pathname;
---

<header>
    <a href="/">
        <Image loading="eager" class="logo" src={logoImage} alt="Mura Fusion Restaurant" />
    </a>

    <!-- Hamburger icon -->
    <input type="checkbox" id="nav-toggle" />
    <label for="nav-toggle" class="hamburger">
        <div></div>
        <div></div>
        <div></div>
    </label>

    <!-- Menu items -->
    <nav>
        <ul>
            <li><a class={currentUrl === '/' ? 'active' : ''} href="/">HOME</a></li>
            <li><a class={currentUrl === '/menu' ? 'active' : ''} href="/menu">MENÃ™</a></li>
            <li><a class={currentUrl === '/chi-siamo' ? 'active' : ''} href="/chi-siamo">CHI SIAMO</a></li>
            <li><a class={currentUrl === '/contatti' ? 'active' : ''} href="/contatti">CONTATTI</a></li>
        </ul>
    </nav>
</header>

<style>
    header {
        z-index: 2;
        display: flex;
        align-items: center;
        position: fixed;
        width: 100vw;
        padding: 1rem;
        background: var(--white);
        transition: padding 0.4s;
    }
    .logo {
        width: 9.5rem;
        transition: width 0.4s;
    }

    #nav-toggle {
        display: none;
    }
    .hamburger {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
        justify-content: center;
        align-items: center;
        width: 3.25rem;
        height: 2.75rem;
        margin-left: auto;
        margin-right: 2rem;
        border-radius: 1rem;
    }
    .hamburger div {
        width: 2.25rem;
        height: 0.25rem;
        border-radius: 1rem;
        background: var(--accent);
        transition: transform 0.4s, opacity 0.4s;
    }

    nav {
        display: none;
        position: fixed;
        width: 100vw;
        top: var(--header-height);
        left: 0;
        background: var(--white);
        transition: top 0.4s;
    }
    nav ul {
        display: flex;
        flex-direction: column;
        gap: 1.25rem;
        margin: 0;
        padding: 1.25rem;
        list-style: none;
        transition: padding 0.4s;
    }
    nav ul li a {
        display: block;
        color: var(--accent);
        text-decoration: none;
        font-weight: bold;
        font-size: 1.25rem;
        transition: font-size 0.4s;
    }
    nav ul li a.active {
        color: var(--black);
    }

    /* Toggle nav */
    #nav-toggle:checked ~ nav {
        display: block;
    }
    #nav-toggle:checked ~ .hamburger div:nth-child(1) {
        transform: translate(0, 0.5rem) rotate(-45deg);
    }
    #nav-toggle:checked ~ .hamburger div:nth-child(2) {
        opacity: 0;
    }
    #nav-toggle:checked ~ .hamburger div:nth-child(3) {
        transform: translate(0, -0.5rem) rotate(45deg);
    }

    @media screen and (min-width: 1000px) {
        header {
            justify-content: center;
        }
        .hamburger {
            display: none;
        }

        nav {
            display: block;
        }
        nav ul {
            flex-direction: row;
            justify-content: center;
            gap: 4rem;
            background: var(--accent);
        }
        nav ul li a {
            color: var(--white);
        }
        nav ul li a:hover {
            color: var(--black);
        }
    }
</style>

<script>
    function minimizeHeader() {
        const header = document.querySelector('header');
        const logo = document.querySelector('.logo');
        const nav = document.querySelector('nav');
        const navUl = document.querySelector('nav ul');
        const navItems = document.querySelectorAll('nav ul li a');

        header.style.padding = '0.5rem';
        logo.style.width = '7.5rem';
        nav.style.top = '3.875rem';
        navUl.style.padding = '0.75rem';
        navItems.forEach(item => item.style.fontSize = '1rem');
    }

    function maximizeHeader() {
        const header = document.querySelector('header');
        const logo = document.querySelector('.logo');
        const nav = document.querySelector('nav');
        const navUl = document.querySelector('nav ul');
        const navItems = document.querySelectorAll('nav ul li a');

        header.style.padding = '1rem';
        logo.style.width = '9.5rem';
        nav.style.top = getComputedStyle(document.documentElement).getPropertyValue('--header-height');
        navUl.style.padding = '1.25rem';
        navItems.forEach(item => item.style.fontSize = '1.25rem');
    }

    window.onscroll = () => {
        if (window.scrollY > 50 && window.innerWidth >= 1000) {
            minimizeHeader();
        } else {
            maximizeHeader();
        }
    };

    const header = document.querySelector('header');
    header.addEventListener('mouseover', () => {
        maximizeHeader();
    });
    header.addEventListener('mouseout', () => {
        if (window.scrollY > 50) {
            minimizeHeader();
        }
    });
</script>

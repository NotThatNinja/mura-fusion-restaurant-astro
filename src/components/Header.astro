---
import { Image } from "astro:assets";
import logoImage from "../assets/logo.png";
---

<header>
    <a href="/mura-fusion-restaurant-astro">
        <Image loading="eager" class="logo" src={logoImage} alt="Mura Fusion Restaurant" />
    </a>

    <!-- Hamburger icon -->
    <input type="checkbox" id="nav-toggle" />
    <label for="nav-toggle" class="hamburger">
        <div></div>
        <div></div>
        <div></div>
    </label>

    <!-- Menu items -->
    <nav>
        <ul>
            <li><a href="/mura-fusion-restaurant-astro">HOME</a></li>
            <li><a href="/mura-fusion-restaurant-astro/menu">MENÃ™</a></li>
            <li><a href="/mura-fusion-restaurant-astro/chi-siamo">CHI SIAMO</a></li>
            <li><a href="/mura-fusion-restaurant-astro/contatti">CONTATTI</a></li>
        </ul>
    </nav>
</header>

<style>
    header {
        z-index: 2;
        display: flex;
        align-items: center;
        position: fixed;
        width: 100vw;
        padding: 1rem;
        background: var(--white);
    }
    .logo {
        width: 9.5rem;
    }

    #nav-toggle {
        display: none;
    }
    .hamburger {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
        justify-content: center;
        align-items: center;
        width: 3.25rem;
        height: 2.75rem;
        margin-left: auto;
        margin-right: 2rem;
        border-radius: 1rem;
    }
    .hamburger div {
        width: 2.25rem;
        height: 0.25rem;
        border-radius: 1rem;
        background: var(--accent);
        transition: transform 0.4s, opacity 0.4s;
    }

    nav {
        display: none;
        position: fixed;
        width: 100vw;
        top: var(--header-height);
        left: 0;
        background: var(--white);
    }
    nav ul {
        display: flex;
        flex-direction: column;
        gap: 1.25rem;
        margin: 0;
        padding: 1.25rem;
        list-style: none;
    }
    nav ul li a {
        display: block;
        color: var(--accent);
        text-decoration: none;
        font-weight: bold;
        font-size: 1.25rem;
    }

    /* Toggle nav */
    #nav-toggle:checked ~ nav {
        display: block;
    }
    #nav-toggle:checked ~ .hamburger div:nth-child(1) {
        transform: translate(0, 0.5rem) rotate(-45deg);
    }
    #nav-toggle:checked ~ .hamburger div:nth-child(2) {
        opacity: 0;
    }
    #nav-toggle:checked ~ .hamburger div:nth-child(3) {
        transform: translate(0, -0.5rem) rotate(45deg);
    }

    @media screen and (min-width: 1000px) {
        header {
            justify-content: center;
        }
        .hamburger {
            display: none;
        }

        nav {
            display: block;
        }
        nav ul {
            flex-direction: row;
            justify-content: center;
            gap: 4rem;
            background: var(--accent);
        }
        nav ul li a {
            color: var(--white);
        }
        nav ul li a:hover {
            color: var(--black);
        }
    }
</style>
